#!/bin/sh
#
# fluxbox startup-script:
#
# Lines starting with a '#' are ignored.

# Change your keymap:
# xmodmap "/home/hal/.Xmodmap"

# Applications you want to run with fluxbox.
# MAKE SURE THAT APPS THAT KEEP RUNNING HAVE AN ''&'' AT THE END.
#
# unclutter -idle 2 &
# wmnd &
# wmsmixer -w &
# idesk &

# And last but not least we start fluxbox.
# Because it is the last app you have to run it with ''exec'' before it.

# Synaptic Touchpad
# if command -v synclient; then
#   synclient VertEdgeScroll=1
#   # synclient HorizEdgeScroll=1
#   synclient TapButton1=1
# fi

command -v xcompmgr && (xcompmgr -c &)
command -v nitrogen && (nitrogen --restore &)
command -v conky    && (conky &)

command -v gnome-screensaver  && (gnome-screensaver &)
command -v nm-applet          && (nm-applet &)
command -v gnome-sound-applet && (gnome-sound-applet &)

command -v gnome-power-manager && (gnome-power-manager &)
command -v bluetooth-applet    && (bluetooth-applet &)

/usr/libexec/polkit-gnome-authentication-agent-1 &
command -v gpg-agent            && eval $(gpg-agent --daemon)
command -v gnome-keyring-daemon && eval $(gnome-keyring-daemon)

exec fluxbox
# or if you want to keep a log:
# exec fluxbox -log "/home/hal/.fluxbox/log"
